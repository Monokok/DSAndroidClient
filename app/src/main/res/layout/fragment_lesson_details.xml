<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Заголовок -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_lesson_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название занятия"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Инструктор -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_instructor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Инструктор: Иван Иванов"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_lesson_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Дата и время -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата и время: 10.10.2023 14:00"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_instructor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Место -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Место: ул. Примерная, 123"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_datetime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Контактный телефон учителя -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_instructor_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Телефон учителя: +7 (123) 456-78-90"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Контактный телефон автошколы -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_school_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Телефон автошколы: +7 (987) 654-32-10"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_instructor_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Стоимость занятия -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Стоимость: 1000 руб."
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_school_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Кнопка отмены -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отменить"
        app:layout_constraintTop_toBottomOf="@id/tv_cost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>